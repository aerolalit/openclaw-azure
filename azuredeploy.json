{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Deploy OpenClaw AI Assistant to Azure Container Apps"
  },
  "parameters": {
    "appName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 32,
      "metadata": {
        "description": "Name for your OpenClaw instance (letters and numbers only)"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region for deployment"
      }
    },
    "discordBotToken": {
      "type": "securestring",
      "metadata": {
        "description": "Discord bot token (starts with MT or MQ)"
      }
    },
    "anthropicApiKey": {
      "type": "securestring",
      "metadata": {
        "description": "Anthropic Claude API key (starts with sk-ant-)"
      }
    },
    "containerCpu": {
      "type": "string",
      "defaultValue": "1.0",
      "allowedValues": [
        "0.5",
        "1.0",
        "2.0"
      ],
      "metadata": {
        "description": "CPU allocation for the container"
      }
    },
    "containerMemory": {
      "type": "string",
      "defaultValue": "2Gi",
      "allowedValues": [
        "1Gi",
        "2Gi",
        "4Gi"
      ],
      "metadata": {
        "description": "Memory allocation for the container"
      }
    }
  },
  "variables": {
    "keyVaultName": "[concat(parameters('appName'), '-kv-', uniqueString(resourceGroup().id))]",
    "storageAccountName": "[toLower(concat(parameters('appName'), 'st', uniqueString(resourceGroup().id)))]",
    "containerAppName": "[concat(parameters('appName'), '-app')]",
    "containerEnvironmentName": "[concat(parameters('appName'), '-env')]",
    "logAnalyticsName": "[concat(parameters('appName'), '-logs')]",
    "managedIdentityName": "[concat(parameters('appName'), '-identity')]"
  },
  "resources": [
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2023-01-31",
      "name": "[variables('managedIdentityName')]",
      "location": "[parameters('location')]"
    },
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2022-10-01",
      "name": "[variables('logAnalyticsName')]",
      "location": "[parameters('location')]",
      "properties": {
        "retentionInDays": 30,
        "sku": {
          "name": "PerGB2018"
        }
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "allowBlobPublicAccess": false,
        "minimumTlsVersion": "TLS1_2",
        "supportsHttpsTrafficOnly": true
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
      "apiVersion": "2023-01-01",
      "name": "[concat(variables('storageAccountName'), '/default/openclaw-data')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ],
      "properties": {
        "shareQuota": 10
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2023-07-01",
      "name": "[variables('keyVaultName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
      ],
      "properties": {
        "tenantId": "[subscription().tenantId]",
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "accessPolicies": [
          {
            "tenantId": "[subscription().tenantId]",
            "objectId": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))).principalId]",
            "permissions": {
              "secrets": [
                "get",
                "list"
              ]
            }
          }
        ],
        "enabledForTemplateDeployment": true,
        "enableRbacAuthorization": false
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/discord-token')]",
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"
      ],
      "properties": {
        "value": "[parameters('discordBotToken')]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/anthropic-key')]",
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"
      ],
      "properties": {
        "value": "[parameters('anthropicApiKey')]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/storage-key')]",
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ],
      "properties": {
        "value": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2023-01-01').keys[0].value]"
      }
    },
    {
      "type": "Microsoft.App/managedEnvironments",
      "apiVersion": "2023-05-01",
      "name": "[variables('containerEnvironmentName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName'))]"
      ],
      "properties": {
        "appLogsConfiguration": {
          "destination": "log-analytics",
          "logAnalyticsConfiguration": {
            "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName'))).customerId]",
            "sharedKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName')), '2022-10-01').primarySharedKey]"
          }
        }
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2023-05-01",
      "name": "[variables('containerAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('containerEnvironmentName'))]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'discord-token')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'anthropic-key')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'storage-key')]"
      ],
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]": {}
        }
      },
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('containerEnvironmentName'))]",
        "configuration": {
          "activeRevisionsMode": "Single",
          "secrets": [
            {
              "name": "discord-token",
              "keyVaultUrl": "[concat('https://', variables('keyVaultName'), '.vault.azure.net/secrets/discord-token')]",
              "identity": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
            },
            {
              "name": "anthropic-key",
              "keyVaultUrl": "[concat('https://', variables('keyVaultName'), '.vault.azure.net/secrets/anthropic-key')]",
              "identity": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
            },
            {
              "name": "storage-key",
              "keyVaultUrl": "[concat('https://', variables('keyVaultName'), '.vault.azure.net/secrets/storage-key')]",
              "identity": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
            }
          ],
          "ingress": {
            "external": true,
            "targetPort": 3000
          }
        },
        "template": {
          "containers": [
            {
              "image": "ghcr.io/clawdbot/clawdbot:latest",
              "name": "openclaw",
              "env": [
                {
                  "name": "DISCORD_TOKEN",
                  "secretRef": "discord-token"
                },
                {
                  "name": "ANTHROPIC_API_KEY",
                  "secretRef": "anthropic-key"
                },
                {
                  "name": "AZURE_STORAGE_ACCOUNT_NAME",
                  "value": "[variables('storageAccountName')]"
                },
                {
                  "name": "AZURE_STORAGE_ACCOUNT_KEY",
                  "secretRef": "storage-key"
                },
                {
                  "name": "WORKSPACE_PATH",
                  "value": "/workspace"
                },
                {
                  "name": "AGENT_NAME",
                  "value": "[parameters('appName')]"
                }
              ],
              "resources": {
                "cpu": "[parameters('containerCpu')]",
                "memory": "[parameters('containerMemory')]"
              },
              "volumeMounts": [
                {
                  "mountPath": "/workspace",
                  "volumeName": "workspace-volume"
                }
              ]
            }
          ],
          "scale": {
            "minReplicas": 1,
            "maxReplicas": 1
          },
          "volumes": [
            {
              "name": "workspace-volume",
              "storageType": "AzureFile",
              "storageName": "workspace-storage"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.App/managedEnvironments/storages",
      "apiVersion": "2023-05-01",
      "name": "[concat(variables('containerEnvironmentName'), '/workspace-storage')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('containerEnvironmentName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts/fileServices/shares', variables('storageAccountName'), 'default', 'openclaw-data')]"
      ],
      "properties": {
        "azureFile": {
          "accountName": "[variables('storageAccountName')]",
          "accountKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2023-01-01').keys[0].value]",
          "shareName": "openclaw-data",
          "accessMode": "ReadWrite"
        }
      }
    }
  ],
  "outputs": {
    "containerAppUrl": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.App/containerApps', variables('containerAppName'))).configuration.ingress.fqdn)]"
    },
    "resourceGroupName": {
      "type": "string",
      "value": "[resourceGroup().name]"
    },
    "keyVaultName": {
      "type": "string",
      "value": "[variables('keyVaultName')]"
    },
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    }
  }
}