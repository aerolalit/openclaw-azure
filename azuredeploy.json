                },
                {
                  "name": "GROQ_API_KEY",
                  "secretRef": "groq-key"
                },
                {
                  "name": "COHERE_API_KEY",
                  "secretRef": "cohere-key"
                },
                {
                  "name": "ELEVENLABS_API_KEY",
                  "secretRef": "elevenlabs-key"
                },
                {
                  "name": "BRAVE_SEARCH_API_KEY",
                  "secretRef": "brave-search-key"
                },
                {
                  "name": "GITHUB_TOKEN",
                  "secretRef": "github-token"
                },
                {
                  "name": "NOTION_API_KEY",
                  "secretRef": "notion-key"
                },
                {
                  "name": "OPENCLAW_GATEWAY_TOKEN",
                  "secretRef": "gateway-token"
                },
                {
                  "name": "WEBHOOK_SECRET",
                  "secretRef": "webhook-secret"
                },
                {
                  "name": "AZURE_STORAGE_ACCOUNT_NAME",
                  "value": "[variables('storageAccountName')]"
                },
                {
                  "name": "AZURE_STORAGE_ACCOUNT_KEY",
                  "secretRef": "storage-key"
                },
                {
                  "name": "WORKSPACE_PATH",
                  "value": "/workspace"
                },
                {
                  "name": "AGENT_NAME",
                  "value": "[variables('validatedAppName')]"
                },
                {
                  "name": "OPENCLAW_START_GATEWAY",
                  "value": "true"
                },
                {
                  "name": "OPENCLAW_GATEWAY_PORT",
                  "value": "18789"
                },
                {
                  "name": "NODE_ENV",
                  "value": "production"
                },
                {
                  "name": "OPENCLAW_AUTO_START",
                  "value": "gateway"
                },
                {
                  "name": "OPENCLAW_GATEWAY_AUTH_MODE",
                  "value": "none"
                },
                {
