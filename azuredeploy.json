          "braveSearch": "[not(equals(parameters('braveSearchApiKey'), ''))]",
          "github": "[variables('hasGitHubToken')]",
          "notion": "[variables('hasNotionKey')]"
        },
        "federation": {
          "gateway": "[not(equals(parameters('gatewayToken'), ''))]",
          "webhook": "[not(equals(parameters('webhookSecret'), ''))]"
        }
      },
      "metadata": {
        "description": "Summary of which tokens and services are configured"
      }
    }
  }
