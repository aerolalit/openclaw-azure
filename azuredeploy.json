                },
                {
                  "name": "HAS_TELEGRAM_TOKEN",
                  "value": "[variables('hasTelegramToken')]"
                },
                {
                  "name": "HAS_SLACK_TOKEN",
                  "value": "[variables('hasSlackToken')]"
                },
                {
                  "name": "HAS_WHATSAPP_TOKEN",
                  "value": "[variables('hasWhatsAppToken')]"
                },
                {
                  "name": "GATEWAY_MODE",
                  "value": "local"
                },
                {
                  "name": "OPENCLAW_ALLOW_UNCONFIGURED",
                  "value": "true"
                },
                {
                  "name": "AUTO_START_GATEWAY",
                  "value": "true"
                },
                {
                  "name": "OPENCLAW_GATEWAY_AUTH",
                  "value": "none"
                },
                {
                  "name": "GATEWAY_AUTH_MODE", 
                  "value": "none"
                },
                {
                  "name": "OPENCLAW_GATEWAY_BIND",
                  "value": "lan"
