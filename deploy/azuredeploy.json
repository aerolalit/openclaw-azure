{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Deploy your own OpenClaw AI Assistant to Azure. Creates a private Discord or Telegram bot powered by Claude AI. Cost estimate: $20-30/month. Requires bot token (Discord or Telegram) and Anthropic API key.",
    "_generator": {
      "name": "OpenClaw Azure Template",
      "version": "2.0.0",
      "description": "Enhanced template with improved token organization and comprehensive validation"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region for deployment (e.g., germanywestcentral, westeurope, eastus)"
      }
    },
    "appName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 12,
      "metadata": {
        "description": "Short name for your OpenClaw instance (3-12 chars, letters and numbers only). Example: 'mybot' or 'assistant1'"
      }
    },
    "anthropicApiKey": {
      "type": "securestring",
      "minLength": 20,
      "metadata": {
        "description": "â­ REQUIRED: Anthropic Claude API key from console.anthropic.com. Must start with 'sk-ant-' (e.g., sk-ant-api03-...). OpenClaw requires Claude AI to function."
      }
    },
    "discordBotToken": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "ðŸ’¬ Discord bot token from Discord Developer Portal (optional, but at least one messaging platform required). Starts with 'MT' or 'MQ', ~59 chars. Leave empty if using Telegram/Slack instead."
      }
    },
    "telegramBotToken": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "ðŸ’¬ Telegram bot token from @BotFather (optional, but at least one messaging platform required). Format: numbers:letters (123456789:ABCdef...). Leave empty if using Discord/Slack instead."
      }
    },
    "slackBotToken": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "ðŸ’¬ Slack bot token from your Slack app (optional). Starts with 'xoxb-'. Leave empty if not using Slack."
      }
    },
    "whatsappToken": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "ðŸ’¬ WhatsApp Business API token (optional). Leave empty if not using WhatsApp."
      }
    },
    "openaiApiKey": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "OPTIONAL: OpenAI API key (sk-...) for GPT models, DALL-E image generation, or fallback AI. Leave empty if not needed."
      }
    },
    "groqApiKey": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "OPTIONAL: Groq API key (gsk_...) for ultra-fast inference with Llama/Mixtral models. Leave empty if not needed."
      }
    },
    "cohereApiKey": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "OPTIONAL: Cohere API key for Command models and embeddings. Leave empty if not needed."
      }
    },
    "braveSearchApiKey": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "OPTIONAL: Brave Search API key for enhanced web search capabilities. Leave empty to use default search."
      }
    },
    "elevenlabsApiKey": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "OPTIONAL: ElevenLabs API key for text-to-speech and voice cloning features. Leave empty if not using voice."
      }
    },
    "githubToken": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "OPTIONAL: GitHub Personal Access Token (ghp_...) for repository operations and code search. Leave empty if not needed."
      }
    },
    "notionApiKey": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "OPTIONAL: Notion API key (secret_...) for Notion workspace integrations. Leave empty if not using Notion."
      }
    },
    "containerCpu": {
      "type": "string",
      "defaultValue": "1.0",
      "allowedValues": ["0.5", "1.0", "2.0"],
      "metadata": {
        "description": "Advanced: CPU cores allocated to the container (1.0 recommended for most use cases)"
      }
    },
    "containerMemory": {
      "type": "string",
      "defaultValue": "2Gi",
      "allowedValues": ["1Gi", "2Gi", "4Gi"],
      "metadata": {
        "description": "Advanced: Memory allocated to the container (2Gi recommended for most use cases)"
      }
    },
    "logRetentionDays": {
      "type": "int",
      "defaultValue": 30,
      "allowedValues": [7, 14, 30, 60, 90],
      "metadata": {
        "description": "Advanced: Log retention period in days. Lower values reduce storage costs (30 days recommended)"
      }
    },
    "gatewayToken": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Advanced: Gateway federation token for connecting multiple OpenClaw instances. Leave empty for standalone deployment."
      }
    },
    "webhookSecret": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Advanced: Webhook authentication secret for incoming HTTP integrations. Leave empty if not using custom webhooks."
      }
    },
    "allowedIpAddresses": {
      "type": "string",
      "minLength": 7,
      "metadata": {
        "description": "ðŸ” REQUIRED: Your IP address(es) for secure access. Visit https://api.ipify.org to find your IP. Single IP: 79.237.146.142 | Multiple IPs: 79.237.146.142,79.237.146.143 (comma-separated, no spaces). Template automatically adds /32 notation. Add more IPs post-deployment via Azure Portal â†’ Container Apps â†’ Ingress."
      }
    }
  },
  "variables": {
    "keyVaultName": "[concat(take(variables('validatedAppName'), 8), '-kv-', take(uniqueString(resourceGroup().id), 10))]",
    "storageAccountName": "[toLower(concat(take(variables('validatedAppName'), 8), take(uniqueString(resourceGroup().id), 15)))]",
    "containerAppName": "[concat(variables('validatedAppName'), '-app')]",
    "containerEnvironmentName": "[concat(variables('validatedAppName'), '-env')]",
    "logAnalyticsName": "[concat(variables('validatedAppName'), '-logs')]",
    "managedIdentityName": "[concat(variables('validatedAppName'), '-identity')]",
    "hasDiscordToken": "[not(equals(parameters('discordBotToken'), ''))]",
    "hasTelegramToken": "[not(equals(parameters('telegramBotToken'), ''))]",
    "hasSlackToken": "[not(equals(parameters('slackBotToken'), ''))]",
    "hasWhatsAppToken": "[not(equals(parameters('whatsappToken'), ''))]",
    "hasAtLeastOneMessagingToken": "[or(or(variables('hasDiscordToken'), variables('hasTelegramToken')), or(variables('hasSlackToken'), variables('hasWhatsAppToken')))]",
    "hasAnthropicKey": "[not(equals(parameters('anthropicApiKey'), ''))]",
    "anthropicKeyValid": "[and(variables('hasAnthropicKey'), startsWith(parameters('anthropicApiKey'), 'sk-ant-'))]",
    "hasOpenAIKey": "[not(equals(parameters('openaiApiKey'), ''))]",
    "openaiKeyValid": "[if(variables('hasOpenAIKey'), startsWith(parameters('openaiApiKey'), 'sk-'), true())]",
    "hasGroqKey": "[not(equals(parameters('groqApiKey'), ''))]",
    "groqKeyValid": "[if(variables('hasGroqKey'), startsWith(parameters('groqApiKey'), 'gsk_'), true())]",
    "hasGitHubToken": "[not(equals(parameters('githubToken'), ''))]",
    "githubTokenValid": "[if(variables('hasGitHubToken'), startsWith(parameters('githubToken'), 'ghp_'), true())]",
    "hasNotionKey": "[not(equals(parameters('notionApiKey'), ''))]",
    "notionKeyValid": "[if(variables('hasNotionKey'), startsWith(parameters('notionApiKey'), 'secret_'), true())]",
    "validatedAppName": "[if(and(variables('hasAtLeastOneMessagingToken'), and(variables('anthropicKeyValid'), and(variables('openaiKeyValid'), and(variables('groqKeyValid'), and(variables('githubTokenValid'), variables('notionKeyValid')))))), parameters('appName'), 'ERROR-Invalid-tokens')]",
    "userIpInput": "[trim(parameters('allowedIpAddresses'))]",
    "ipArray": "[split(variables('userIpInput'), ',')]",
    "copy": [
      {
        "name": "ipSecurityRestrictions",
        "count": "[length(variables('ipArray'))]",
        "input": {
          "name": "[concat('AllowIP-', replace(replace(trim(variables('ipArray')[copyIndex('ipSecurityRestrictions')]), '.', '-'), '/', '-'))]",
          "ipAddressRange": "[if(contains(trim(variables('ipArray')[copyIndex('ipSecurityRestrictions')]), '/'), trim(variables('ipArray')[copyIndex('ipSecurityRestrictions')]), concat(trim(variables('ipArray')[copyIndex('ipSecurityRestrictions')]), '/32'))]",
          "action": "Allow"
        }
      }
    ]
  },
  "resources": [
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2023-01-31",
      "name": "[variables('managedIdentityName')]",
      "location": "[parameters('location')]"
    },
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2022-10-01",
      "name": "[variables('logAnalyticsName')]",
      "location": "[parameters('location')]",
      "properties": {
        "retentionInDays": "[parameters('logRetentionDays')]",
        "sku": {
          "name": "PerGB2018"
        }
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "allowBlobPublicAccess": false,
        "minimumTlsVersion": "TLS1_2",
        "supportsHttpsTrafficOnly": true
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
      "apiVersion": "2023-01-01",
      "name": "[concat(variables('storageAccountName'), '/default/openclaw-data')]",
      "dependsOn": ["[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"],
      "properties": {
        "shareQuota": 10
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2023-07-01",
      "name": "[variables('keyVaultName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
      ],
      "properties": {
        "tenantId": "[subscription().tenantId]",
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "accessPolicies": [
          {
            "tenantId": "[subscription().tenantId]",
            "objectId": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))).principalId]",
            "permissions": {
              "secrets": ["get", "list"]
            }
          }
        ],
        "enabledForTemplateDeployment": true,
        "enableRbacAuthorization": false
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/discord-token')]",
      "dependsOn": ["[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"],
      "properties": {
        "value": "[if(equals(parameters('discordBotToken'), ''), 'NOT_CONFIGURED', parameters('discordBotToken'))]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/telegram-token')]",
      "dependsOn": ["[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"],
      "properties": {
        "value": "[if(equals(parameters('telegramBotToken'), ''), 'NOT_CONFIGURED', parameters('telegramBotToken'))]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/slack-token')]",
      "dependsOn": ["[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"],
      "properties": {
        "value": "[if(equals(parameters('slackBotToken'), ''), 'NOT_CONFIGURED', parameters('slackBotToken'))]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/whatsapp-token')]",
      "dependsOn": ["[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"],
      "properties": {
        "value": "[if(equals(parameters('whatsappToken'), ''), 'NOT_CONFIGURED', parameters('whatsappToken'))]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/anthropic-key')]",
      "dependsOn": ["[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"],
      "properties": {
        "value": "[parameters('anthropicApiKey')]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/openai-key')]",
      "dependsOn": ["[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"],
      "properties": {
        "value": "[if(equals(parameters('openaiApiKey'), ''), 'NOT_CONFIGURED', parameters('openaiApiKey'))]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/groq-key')]",
      "dependsOn": ["[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"],
      "properties": {
        "value": "[if(equals(parameters('groqApiKey'), ''), 'NOT_CONFIGURED', parameters('groqApiKey'))]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/cohere-key')]",
      "dependsOn": ["[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"],
      "properties": {
        "value": "[if(equals(parameters('cohereApiKey'), ''), 'NOT_CONFIGURED', parameters('cohereApiKey'))]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/elevenlabs-key')]",
      "dependsOn": ["[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"],
      "properties": {
        "value": "[if(equals(parameters('elevenlabsApiKey'), ''), 'NOT_CONFIGURED', parameters('elevenlabsApiKey'))]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/brave-search-key')]",
      "dependsOn": ["[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"],
      "properties": {
        "value": "[if(equals(parameters('braveSearchApiKey'), ''), 'NOT_CONFIGURED', parameters('braveSearchApiKey'))]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/github-token')]",
      "dependsOn": ["[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"],
      "properties": {
        "value": "[if(equals(parameters('githubToken'), ''), 'NOT_CONFIGURED', parameters('githubToken'))]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/notion-key')]",
      "dependsOn": ["[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"],
      "properties": {
        "value": "[if(equals(parameters('notionApiKey'), ''), 'NOT_CONFIGURED', parameters('notionApiKey'))]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/gateway-token')]",
      "dependsOn": ["[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"],
      "properties": {
        "value": "[if(equals(parameters('gatewayToken'), ''), concat(uniqueString(resourceGroup().id, deployment().name), uniqueString(parameters('appName'), resourceGroup().location), uniqueString(deployment().name, parameters('appName')), uniqueString(resourceGroup().id, parameters('location'))), parameters('gatewayToken'))]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/webhook-secret')]",
      "dependsOn": ["[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"],
      "properties": {
        "value": "[if(equals(parameters('webhookSecret'), ''), 'NOT_CONFIGURED', parameters('webhookSecret'))]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(variables('keyVaultName'), '/storage-key')]",
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ],
      "properties": {
        "value": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2023-01-01').keys[0].value]"
      }
    },
    {
      "type": "Microsoft.App/managedEnvironments",
      "apiVersion": "2023-05-01",
      "name": "[variables('containerEnvironmentName')]",
      "location": "[parameters('location')]",
      "dependsOn": ["[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName'))]"],
      "properties": {
        "appLogsConfiguration": {
          "destination": "log-analytics",
          "logAnalyticsConfiguration": {
            "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName'))).customerId]",
            "sharedKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName')), '2022-10-01').primarySharedKey]"
          }
        }
      }
    },
    {
      "type": "Microsoft.App/managedEnvironments/storages",
      "apiVersion": "2023-05-01",
      "name": "[concat(variables('containerEnvironmentName'), '/workspace-storage')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('containerEnvironmentName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts/fileServices/shares', variables('storageAccountName'), 'default', 'openclaw-data')]"
      ],
      "properties": {
        "azureFile": {
          "accountName": "[variables('storageAccountName')]",
          "accountKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2023-01-01').keys[0].value]",
          "shareName": "openclaw-data",
          "accessMode": "ReadWrite"
        }
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2023-05-01",
      "name": "[variables('containerAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('containerEnvironmentName'))]",
        "[resourceId('Microsoft.App/managedEnvironments/storages', variables('containerEnvironmentName'), 'workspace-storage')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'discord-token')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'anthropic-key')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'storage-key')]"
      ],
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]": {}
        }
      },
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('containerEnvironmentName'))]",
        "configuration": {
          "activeRevisionsMode": "Single",
          "secrets": [
            {
              "name": "discord-token",
              "keyVaultUrl": "[concat('https://', variables('keyVaultName'), '.vault.azure.net/secrets/discord-token')]",
              "identity": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
            },
            {
              "name": "telegram-token",
              "keyVaultUrl": "[concat('https://', variables('keyVaultName'), '.vault.azure.net/secrets/telegram-token')]",
              "identity": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
            },
            {
              "name": "slack-token",
              "keyVaultUrl": "[concat('https://', variables('keyVaultName'), '.vault.azure.net/secrets/slack-token')]",
              "identity": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
            },
            {
              "name": "whatsapp-token",
              "keyVaultUrl": "[concat('https://', variables('keyVaultName'), '.vault.azure.net/secrets/whatsapp-token')]",
              "identity": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
            },
            {
              "name": "anthropic-key",
              "keyVaultUrl": "[concat('https://', variables('keyVaultName'), '.vault.azure.net/secrets/anthropic-key')]",
              "identity": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
            },
            {
              "name": "openai-key",
              "keyVaultUrl": "[concat('https://', variables('keyVaultName'), '.vault.azure.net/secrets/openai-key')]",
              "identity": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
            },
            {
              "name": "groq-key",
              "keyVaultUrl": "[concat('https://', variables('keyVaultName'), '.vault.azure.net/secrets/groq-key')]",
              "identity": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
            },
            {
              "name": "cohere-key",
              "keyVaultUrl": "[concat('https://', variables('keyVaultName'), '.vault.azure.net/secrets/cohere-key')]",
              "identity": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
            },
            {
              "name": "elevenlabs-key",
              "keyVaultUrl": "[concat('https://', variables('keyVaultName'), '.vault.azure.net/secrets/elevenlabs-key')]",
              "identity": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
            },
            {
              "name": "brave-search-key",
              "keyVaultUrl": "[concat('https://', variables('keyVaultName'), '.vault.azure.net/secrets/brave-search-key')]",
              "identity": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
            },
            {
              "name": "github-token",
              "keyVaultUrl": "[concat('https://', variables('keyVaultName'), '.vault.azure.net/secrets/github-token')]",
              "identity": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
            },
            {
              "name": "notion-key",
              "keyVaultUrl": "[concat('https://', variables('keyVaultName'), '.vault.azure.net/secrets/notion-key')]",
              "identity": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
            },
            {
              "name": "gateway-token",
              "keyVaultUrl": "[concat('https://', variables('keyVaultName'), '.vault.azure.net/secrets/gateway-token')]",
              "identity": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
            },
            {
              "name": "webhook-secret",
              "keyVaultUrl": "[concat('https://', variables('keyVaultName'), '.vault.azure.net/secrets/webhook-secret')]",
              "identity": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
            },
            {
              "name": "storage-key",
              "keyVaultUrl": "[concat('https://', variables('keyVaultName'), '.vault.azure.net/secrets/storage-key')]",
              "identity": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
            }
          ],
          "ingress": {
            "external": true,
            "targetPort": 18789,
            "transport": "auto",
            "allowInsecure": false,
            "ipSecurityRestrictions": "[variables('ipSecurityRestrictions')]",
            "traffic": [
              {
                "weight": 100,
                "latestRevision": true
              }
            ]
          }
        },
        "template": {
          "containers": [
            {
              "image": "ghcr.io/openclaw/openclaw:main",
              "name": "openclaw",
              "command": [
                "/bin/sh",
                "-c",
